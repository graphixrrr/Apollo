// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Contact {
  id          String   @id @default(cuid())
  firstName   String
  lastName    String
  email       String?
  phone       String?
  company     String?
  title       String?
  linkedinUrl String?
  website     String?
  location    String?
  industry    String?
  notes       String?
  tags        String   // JSON string of tags
  source      String   // Where this contact was found
  confidence  Float    @default(0.0) // Confidence score of the data
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("contacts")
}

model ScrapingJob {
  id          String   @id @default(cuid())
  query       String   // Search query
  status      String   @default("pending") // pending, running, completed, failed
  results     Int      @default(0)
  errors      String?  // JSON array of errors
  startedAt   DateTime?
  completedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("scraping_jobs")
}

model ScrapingSource {
  id          String   @id @default(cuid())
  name        String   // Name of the source (e.g., "LinkedIn", "Company Website")
  url         String   // Base URL of the source
  isActive    Boolean  @default(true)
  lastScraped DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("scraping_sources")
} 